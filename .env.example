# Web Automation Framework Configuration
# Copy this file to .env and modify as needed

# Rate Limiting Settings
MIN_DELAY=1.0
MAX_DELAY=5.0
REQUEST_TIMEOUT=30
MAX_RETRIES=3
BACKOFF_FACTOR=1.5

# Browser Settings
HEADLESS=true
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080
PAGE_LOAD_TIMEOUT=30

# Anti-Bot Settings
ROTATE_USER_AGENTS=true
USE_PROXY_ROTATION=false
# PROXY_LIST=proxy1:8080,proxy2:8080,proxy3:8080

# Output Settings
OUTPUT_DIR=output
OUTPUT_FORMAT=json

# Pagination Settings
MAX_PAGES=10

# Example Target Settings (override with CLI args)
# TARGET_URL=https://example.com/products
# PRODUCT_SELECTOR=.product
# FIELDS_TO_EXTRACT={"name": ".name", "price": ".price"}